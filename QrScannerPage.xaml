<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
    x:Class="MobileBezorgApp.QrScannerPage">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header met Grid -->
        <Grid Grid.Row="0" Padding="20" ColumnDefinitions="*,Auto">
            <!-- Moet nog dynamisch worden -->
            <Label Text="Scan pakket 1/3"
                   FontSize="24"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   Grid.Column="0" />
            <Image Source="menu.png" WidthRequest="30" HeightRequest="30" Grid.Column="1" VerticalOptions="Center" />
        </Grid>

        <!-- Scanner -->
        <zxing:CameraBarcodeReaderView 
            x:Name="cameraBarcodeReaderView"
            IsDetecting="True"
            BarcodesDetected="CameraBarcodeReaderView_BarcodesDetected"
            Grid.Row="1"
            HorizontalOptions="Fill"
            VerticalOptions="Fill" />

        <!-- Bottom Navigation -->
        <Grid Grid.Row="2" BackgroundColor="White" Padding="10" ColumnDefinitions="*,*,*">
            <ImageButton Grid.Column="0" Source="navigatie_pictogram.png" BackgroundColor="Transparent" />
            <ImageButton Grid.Column="1" Source="bezorg_pictogram.png" BackgroundColor="Transparent" />
            <ImageButton Grid.Column="2" Source="qr_code_pictogram.png" BackgroundColor="Transparent" />
        </Grid>

    </Grid>
</ContentPage>
