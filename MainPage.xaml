<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileBezorgApp.MainPage"
             BackgroundColor="#FFF">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,40"
            Spacing="30"
            VerticalOptions="Center">

            <Label Text="Goedemorgen!"
                   FontSize="28"
                   TextColor="#1C68FF"
                   HorizontalOptions="Center"
                   HeightRequest="250"/>

            <Entry x:Name="RitnummerEntry"
                   Placeholder="Voer je ritnummer in"
                   BackgroundColor="#E3EFFF"
                   TextColor="#222"
                   FontSize="18"
                   HeightRequest="48"
                   Margin="0,5"
                   Keyboard="Numeric" />

            <Button Text="Inloggen"
                    x:Name="LoginButton"
                    BackgroundColor="#1C68FF"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="12"
                    HeightRequest="48"
                    Clicked="LoginButton_Clicked" />

            <Label x:Name="ValidationLabel"
                   TextColor="Red"
                   IsVisible="False"
                   FontSize="14"
                   HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
