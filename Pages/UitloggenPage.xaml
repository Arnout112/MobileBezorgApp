<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MobileBezorgApp.UitloggenPage">

    <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">
        <Label
            Text="Uitloggen"
            HeightRequest="300"
            Style="{StaticResource Headline}" />

        <Label
            Text="Weet je zeker dat je wilt uitloggen?"
            HeightRequest="50" />

        <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
            <Button
                Text="Annuleer"
                BackgroundColor="{StaticResource Rood}"
                Clicked="OnAnnuleerClicked"
                WidthRequest="120"/>
            <Button
                Text="Uitloggen"
                BackgroundColor="{StaticResource Blauw}"
                Clicked="OnUitloggenClicked"
                WidthRequest="120"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
