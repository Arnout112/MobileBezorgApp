<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileBezorgApp.TripInformationPage"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto, *, Auto, Auto">

        <!-- Header -->
        <Grid Padding="20" ColumnDefinitions="*, Auto">
            <Label Text="Ritinformatie"
                   FontSize="24"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />
        </Grid>

        <!-- Main Content -->
        <VerticalStackLayout Grid.Row="1"
                              VerticalOptions="Center"
                              HorizontalOptions="Center"
                              Spacing="20">
            <Label Text="Ritnummer: 135739" FontSize="18" />
            <Label Text="Aantal adressen: 50" FontSize="18" />
            <Label Text="Aantal pakketen: 73" FontSize="18" />
            <Label Text="Totale rit tijd: 05:00" FontSize="18" />

            <Button Text="Volgende"
                BackgroundColor="#007BFF"
                TextColor="White"
                CornerRadius="25"
                WidthRequest="200"
                HeightRequest="50"
                Shadow="10"
                FontAttributes="Bold"
                Margin="0,50,0,60"
                Clicked="OnNextButtonClicked" />

        </VerticalStackLayout>
    </Grid>

</ContentPage>
