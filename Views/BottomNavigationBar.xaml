<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileBezorgApp.Views.BottomNavigationBar">

    <Border>
            <Grid
                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}"
                Padding="20"
                ColumnDefinitions="*, *, *"
                VerticalOptions="End">
                <Image Source="navigatie_pictogram.png" 
                       WidthRequest="30" HeightRequest="30" 
                       HorizontalOptions="Center" 
                       x:Name="NavigationButton" />
                <Image Grid.Column="1" Source="bezorg_pictogram.png" 
                       WidthRequest="30" HeightRequest="30" 
                       HorizontalOptions="Center" 
                       x:Name="HomeButton"/>
                <Image Grid.Column="2" Source="qr_code_pictogram.png" 
                       WidthRequest="30" HeightRequest="30" 
                       HorizontalOptions="Center" 
                       x:Name="QrButton" />
            </Grid>
        </Border>
</ContentView>